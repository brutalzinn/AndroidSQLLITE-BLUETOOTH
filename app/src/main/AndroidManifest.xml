<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.sqlite">
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".bluetooth.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name="info.androidhive.sqlite.bluetooth.DeviceListActivity"
            android:label="@string/app_nome">
            <intent-filter>
                <action android:name="info.androidhive.sqlite.bluetooth.DEVICELISTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.androidhive.sqlite.bluetooth.SplashInfoActivity"
            android:label="@string/app_nome">
            <intent-filter>
                <action android:name="info.androidhive.sqlite.bluetooth.SplashInfoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <!-- SobreActivity -->

        <!-- AnduinoActivity -->
        <activity
            android:name=".bluetooth.AndruinoActivity"
            android:label="@string/title_activity_andruino" />

        <!-- AjudaActivity -->
    </application>

</manifest>